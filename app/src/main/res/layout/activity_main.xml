<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:paddingBottom="@dimen/activity_vertical_padding"
    android:paddingEnd="@dimen/activity_right_padding"
    android:paddingStart="@dimen/activity_left_padding"
    android:paddingTop="@dimen/activity_vertical_padding"
    tools:context="com.example.android.mrbugdroid.MainActivity">


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:alpha="0.9"
        android:contentDescription="@string/app_name"
        android:scaleX="1.5"
        android:scaleY="1.5"
        android:src="@drawable/bugdroid"
        android:translationX="-4dp" />

    <TextView
        android:id="@+id/achievement"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-medium"
        android:text="@string/achievement"
        android:textColor="@color/mainText"
        android:textSize="@dimen/smallText" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@id/achievement"
        android:fontFamily="sans-serif-medium"
        android:paddingEnd="@dimen/activity_right_padding"
        android:rotation="15"
        android:text="@string/Udacity"
        android:textColor="@color/mainText"
        android:textSize="@dimen/veryLargeText" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/frame_top"
        android:fontFamily="sans-serif-medium"
        android:paddingBottom="@dimen/small_vertical_padding"
        android:text="@string/bugdroid_says"
        android:textColor="@color/mainText"
        android:textSize="@dimen/smallText" />

    <TextView
        android:id="@+id/frame_top"
        android:layout_width="match_parent"
        android:layout_height="@dimen/frame_width"
        android:layout_above="@+id/greeting"
        android:background="@color/mainText" />

    <TextView
        android:id="@+id/greeting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/frame_bottom"
        android:layout_centerHorizontal="true"
        android:fontFamily="sans-serif-medium"
        android:paddingBottom="@dimen/small_vertical_padding"
        android:paddingTop="@dimen/small_vertical_padding"
        android:text="@string/hurray"
        android:textColor="@color/mainText"
        android:textSize="@dimen/largeText"
        android:textStyle="italic" />

    <TextView
        android:id="@+id/frame_bottom"
        android:layout_width="match_parent"
        android:layout_height="@dimen/frame_width"
        android:layout_alignParentBottom="true"
        android:background="@color/mainText" />

</RelativeLayout>
